@using CleanArc.Application.Services.Users.ViewModels
@model CleanArc.Application.Services.Users.ViewModels.UserUpdateViewModel
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@{
    UserUpdateViewModel Model = ViewBag.Model;
}
<div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <label asp-for="Id" hidden></label>
    <input asp-for="Id" type="hidden" value=@Model.Id class="form-control" />
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" value=@Model.Email readonly="readonly" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" value=@Model.UserName />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" value=@Model.PhoneNumber />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="custom-control custom-checkbox checkbox-lg">
        @if (Model.IsActive)
        {
            <input asp-for="IsActive" type="checkbox" class="custom-control-input" id="isActive" checked>
        }
        else
        {
            <input asp-for="IsActive" type="checkbox" class="custom-control-input" id="isActive">

        }
        <label asp-for="IsActive" class="custom-control-label" for="isActive">Is Account Active</label>
    </div>
    <div class="custom-control custom-checkbox checkbox-lg">
        <input asp-for="ResetPassword" type="checkbox" class="custom-control-input resetPassCheckbox" id="resetPassword">
        <label asp-for="ResetPassword" class="custom-control-label" for="resetPassword">Reset Password</label>
    </div>
    <div class="form-group" id="passwordDiv" hidden>
        <label for="Password">Password</label>
        <input asp-for="Password" type="password" class="form-control passwordInput" id="passwordInput" name="Password" />
        <span id="passwordInput-error" class="input-validation-error text-danger errorPasswordInput"> </span>

        <label for="PasswordConfirm">Confirm Password</label>
        <input type="password" id="passwordInputConfirm" class="form-control passwordInputConfirm" name="passwordInputConfirm" />
        <span id="passwordInputConfirm-error" class="input-validation-error text-danger errorPasswordInput"> </span>

    </div>

   


</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#resetPassword').prop('checked', false);



            $("#resetPassword").change(function () {
                if (this.checked) {
                    $('#passwordDiv').removeAttr('hidden');                  
                }
                else {
                    $("#passwordDiv").attr("hidden", true);   
                }
            });
        });
    </script>
}