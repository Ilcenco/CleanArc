@{
}
<link rel="stylesheet" href="~/css/Users.css" />

<div class="wrapper">
    <div class="main-content listAll">
        <section id="sectionListAll">
            <h2><i class="fas fa-user"></i>Users</h2>
            <p>
                <div class="upperSideList">
                    <div class="form-group">
                        <!--		Show Numbers Of Rows 		-->
                        <select class="form-control" name="state" id="maxRows">
                            <option value="13">Default 13</option>
                            <option value="1">1</option>
                            <option value="5">5</option>
                            <option value="10">10</option>
                            <option value="15">15</option>
                            <option value="20">20</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                    </div>
                    <div class="search">
                        <form action="#">
                            <input type="text"
                                   placeholder=" Search User "
                                   name="search"
                                   onkeyup="filterFunc()"
                                   id="searchInput">
                        </form>
                    </div>
                </div>
                <div class="container">
                    <table class="table table-hover table-striped table-class" id="pagedTable">
                        <thead>
                            <tr class="props">
                                <th class="th-sm">
                                    <i class="fas fa-list-ol"></i>
                                </th>
                                <th class="th-sm">
                                    <i class="fas fa-user"></i>Name
                                </th>
                                <th class="th-sm">
                                    <i class="fas fa-envelope"></i> Email
                                </th>
                                <th class="th-sm">
                                    <i class="fas fa-phone"></i>Phone Number
                                </th>
                                <th class="th-sm">
                                    <i class="fas fa-edit"></i>Edit
                                </th>
                                <th class="th-sm">
                                    <i class="fas fa-trash-alt"></i>Delete
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                    <div class="paginationButtons" id="paginationButtons">

                    </div>
                </div>

                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel"></h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body" id="popup_text">

                            </div>
                            <div class="modal-footer" id="popup_buttons">

                            </div>
                        </div>
                    </div>
                </div>
            </p>
        </section>
        <br />
    </div>
</div>

